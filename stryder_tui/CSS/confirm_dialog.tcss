ConfirmDialog {
    align: center middle;
}

ConfirmDialog #dialog {
    width: 60;
    height: 15;
    padding: 2;
    background: gray;
}

ConfirmDialog #question {
    width: 100%;
    text-align: center;
    text-style: bold;
    margin-bottom: 1;
}

ConfirmDialog #buttons {
    layout: horizontal;
    width: 100%;
    align-horizontal: center;
    margin-top: 1;
}

ConfirmDialog #buttons Button {
    margin: 0 2;
}